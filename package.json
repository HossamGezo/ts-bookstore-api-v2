{
  "name": "ts-bookstore-api-v2",
  "version": "1.0.0",
  "description": "Second iteration practicing Clean Architecture",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "concurrently \"npm run server\" \"npm run check-types\"",
    "mvc": "concurrently \"npm run server\" \"npm run check-types\" \"npm run tailwind:dev\"",
    "server": "nodemon --exec tsx src/index.ts",
    "check-types": "tsc --noEmit --watch",
    "tailwind:dev": "npx @tailwindcss/cli -i ./src/css/input.css -o ./public/css/output.css --watch",
    "tailwind:build": "npx @tailwindcss/cli -i ./src/css/input.css -o ./public/css/output.css",
    "mongo:start": "brew services start mongodb-community",
    "mongo:stop": "brew services stop mongodb-community",
    "format": "prettier --write .",
    "gen-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "tree": "tree -I 'node_modules|dist'",
    "seed:users": "tsx src/seeders/users.seeder.ts -seed",
    "delete:users": "tsx src/seeders/users.seeder.ts -delete",
    "seed:authors": "tsx src/seeders/authors.seeder.ts -seed",
    "delete:authors": "tsx src/seeders/authors.seeder.ts -delete",
    "seed:books": "tsx src/seeders/books.seeder.ts -seed",
    "delete:books": "tsx src/seeders/books.seeder.ts -delete"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HossamGezo/ts-bookstore-api-v2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/HossamGezo/ts-bookstore-api-v2/issues"
  },
  "homepage": "https://github.com/HossamGezo/ts-bookstore-api-v2#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "express-async-handler": "^1.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "zod": "^4.2.1"
  }
}
